% tcolorbox main an accent colors
\newcommand\mainc[1]{#1!12}
\newcommand\accc[1]{#1!50!black}

\newtcbtheorem[number within=section]{example}{Example}{%
    enhanced,
    breakable,
    colframe=\mainc{green},
    colback=\mainc{green},
    colbacktitle=\mainc{green},
    coltitle=\accc{green},
    borderline west={1mm}{0pt}{\accc{green}},
    sharp corners,
    boxrule=0mm,
    separator sign dash,
    fonttitle=\bfseries}{exp}

\newtcbtheorem[number within=section]{problem}{Problem}{%
    enhanced,
    breakable,
    colframe=\mainc{red},
    colback=\mainc{red},
    colbacktitle=\mainc{red},
    coltitle=\accc{red},
    borderline west={1mm}{0pt}{\accc{red}},
    sharp corners,
    boxrule=0mm,
    separator sign dash,
    fonttitle=\bfseries}{prb}

\newtcbtheorem[number within=section]{definition}{Definition}{%
    enhanced,
    breakable,
    colframe=\mainc{orange},
    colback=\mainc{orange},
    colbacktitle=\mainc{orange},
    coltitle=\accc{orange},
    borderline west={1mm}{0pt}{\accc{orange}},
    sharp corners,
    boxrule=0mm,
    separator sign dash,
    fonttitle=\bfseries}{def}

\newtcbtheorem[number within=section]{theorem}{Theorem}{%
    enhanced,
    breakable,
    colframe=\mainc{blue},
    colback=\mainc{blue},
    colbacktitle=\mainc{blue},
    coltitle=\accc{blue},
    separator sign dash,
    fonttitle=\bfseries}{the}


